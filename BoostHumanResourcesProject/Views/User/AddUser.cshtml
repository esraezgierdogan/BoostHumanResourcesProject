@model EntityLayer.Concrete.AppUser
@{
    ViewData["Title"] = "AddUser";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<h1>Yeni Personel</h1>
<br />
@using (Html.BeginForm("AddUser", "User", FormMethod.Post))
{
    @Html.Label("Adı")
    @Html.TextBoxFor(x=>x.FirstName,new{@class="form-control"})
    @Html.ValidationMessageFor(x=>x.FirstName)
    <br />
    @Html.Label("Soyadı")
    @Html.TextBoxFor(x=>x.LastName,new{@class="form-control"})
    @Html.ValidationMessageFor(x=>x.LastName)
    <br />
    @Html.Label("TC NO")
    @Html.TextBoxFor(x=>x.TCNO,new{@class="form-control"})
    @Html.ValidationMessageFor(x=>x.TCNO)
    <br />
    @*@Html.Label("Departman")
    @Html.DropDownListFor(x=>x.DepartmentID,(List<SelectListItem>)ViewBag.department,new{@class="form-control"}*@
    <br />
    @Html.Label("Fotoğraf")
    @Html.TextBoxFor(x=>x.ImagePath,new{@class="form-control"})
    @Html.ValidationMessageFor(x=>x.ImagePath)
    <br />
    @Html.Label("Doğum Tarihi")
    @Html.TextBoxFor(x=>x.BirthDate,new{@class="form-control"})
    @Html.ValidationMessageFor(x=>x.BirthDate)
    <br />
    @Html.Label("Adres")
    @Html.TextBoxFor(x=>x.Address,new{@class="form-control"})
    @Html.ValidationMessageFor(x=>x.Address)
    <br />
    @Html.Label("Ünvan")
    @Html.TextBoxFor(x=>x.Title,new{@class="form-control"})
    @Html.ValidationMessageFor(x=>x.Title)
    <br />


}