@model BusinessLayer.Models.VMs.AppUserandDepartments
@{
    ViewData["Title"] = "AddUser";
    Layout = "../Shared/_ManagerLayout.cshtml";
}



<div class="page-header">
    <h3 class="page-title">
        <span class="page-title-icon bg-gradient-primary text-white mr-2">
            <i class="mdi mdi-contacts menu-icon"></i>
        </span> Yeni Personel
    </h3>
</div>

@if (TempData["message"] != null)
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-success">
                @TempData["message"]
            </div>
        </div>
    </div>

}

<br />
@using (Html.BeginForm("AddUser", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.Label("Birinci Adı")
    @Html.TextBoxFor(x => x.appUserUpdateDTO.FirstName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.appUserUpdateDTO.FirstName, "", new { @class = "text-danger" })
    <br />
    @Html.Label("İkinci Adı")
    @Html.TextBoxFor(x => x.appUserUpdateDTO.SecondName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.appUserUpdateDTO.SecondName, "", new { @class = "text-danger" })
    <br />
    @Html.Label("Soyadı")
    @Html.TextBoxFor(x => x.appUserUpdateDTO.LastName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.appUserUpdateDTO.LastName, "", new { @class = "text-danger" })
    <br />
    @Html.Label("Cinsiyet")

    <div class="col-md-10">
        Kadın
        @Html.RadioButtonFor(model => model.appUserUpdateDTO.Gender, 1)
        Erkek
        @Html.RadioButtonFor(model => model.appUserUpdateDTO.Gender, 2)
    </div>

    <br />
    @Html.Label("Telefon No")
    @Html.TextBoxFor(x => x.appUserUpdateDTO.PhoneNumber, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.appUserUpdateDTO.PhoneNumber, "", new { @class = "text-danger" })
    <br />
    @Html.Label("TC NO")
    @Html.TextBoxFor(x => x.appUserUpdateDTO.TCNO, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.appUserUpdateDTO.TCNO, "", new { @class = "text-danger" })
    <br />
    @Html.Label("Departman")
    <select name="appUserUpdateDTO.DepartmentID" class="form-control">
 
        <option value="">
            Lütfen bir departman seçiniz
        </option>



        @foreach (var item in Model.departmentsList)
        {
            <option value="@item.DepartmentID">
                @item.DepartmentName
            </option>
        }
    </select>

    @Html.ValidationMessageFor(x => x.appUserUpdateDTO.DepartmentID, "", new { @class = "text-danger" })
    <br />
    @Html.Label("Fotoğraf")
    <div class="form-group">
        @* <label asp-for="appUserUpdateDTO.file" class="control-label"></label>*@
        @* <input type="file" name="file" class="form-control-file" />*@
        <input type="file" asp-for="appUserUpdateDTO.file" />
        <span asp-validation-for="appUserUpdateDTO.file" class="text-danger"></span>
    </div>
    <br />

    @Html.Label("Doğum Tarihi")
    @Html.TextBoxFor(x => x.appUserUpdateDTO.BirthDate, "{0:d MMM yyyy}", new { @class = "form-control", @id = "dateTimeInput" })
    @Html.ValidationMessageFor(x => x.appUserUpdateDTO.BirthDate, "", new { @class = "text-danger" })
    <br />
    @Html.Label("Adres")
    @Html.TextBoxFor(x => x.appUserUpdateDTO.Address, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.appUserUpdateDTO.Address, "", new { @class = "text-danger" })
    <br />
    @Html.Label("Ünvan")
    <select name="appUserUpdateDTO.Title" class="form-control">
        <option value="">
            Lütfen bir ünvan seçiniz
        </option>
        <option value="Programcı">
            Programcı
        </option>
        <option value="Veri Tabanı Uzmanı">
            Veri Tabanı Uzmanı
        </option>
        <option value="Bilgi İşlem Uzmanı">
            Bilgi İşlem Uzmanı
        </option>
        <option value="Proje Uzmanı">
            Proje Uzmanı
        </option>
        <option value="Sistem Analisti Uzmanı">
            Sistem Analisti Uzmanı
        </option>
        <option value="Veri Analisti Uzmanı">
            Veri Analisti Uzmanı
        </option>
        <option value="Sistem ve Ağ Uzmanı">
            Sistem ve Ağ Uzmanı
        </option>
        <option value="İnsan Kaynakları Uzmanı">
            İnsan Kaynakları Uzmanı
        </option>
        <option value="Satış ve Pazarlama Uzmanı">
            Satış ve Pazarlama Uzmanı
        </option>
        <option value="Bilgi Sistemleri Denetçisi">
            Bilgi Sistemleri Denetçisi
        </option>
        <option value="Genel Müdür">
            Genel Müdür
        </option>
        <option value="Müdür Yardımcısı">
            Müdür Yardımcısı
        </option>
        <option value="Müdür">
            Müdür
        </option>
    </select>
    @Html.ValidationMessageFor(x => x.appUserUpdateDTO.Title, "", new { @class = "text-danger" })
    <br />
    <button class="btn btn-primary" type="submit">Kaydet</button>


}

<script>
    var dateTimeInput
    dateTimeInput = document.getElementById("dateTimeInput");
    dateTimeInput.value = "01-01-2000";
</script>